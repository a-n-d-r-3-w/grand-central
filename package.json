{
  "name": "grand-central",
  "version": "1.0.0",
  "engines": {
    "node": ">=12.13.1"
  },
  "private": true,
  "dependencies": {
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "concurrently": "^5.0.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "http-status-codes": "^1.4.0",
    "mongodb": "^3.3.4",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.2.0",
    "sendgrid": "^5.2.3",
    "shortid": "^2.2.15"
  },
  "scripts": {
    "// Runs client and server in dev mode": "",
    "dev": "concurrently \"npm:client:dev\" \"npm:server:dev\"",
    "// Runs client and server in prod mode": "",
    "start": "concurrently \"npm:client:build\" \"npm:server:start\"",
    "// Client-specific scripts.": "",
    "client:dev": "react-scripts start",
    "client:test": "react-scripts test",
    "client:build": "react-scripts build",
    "client:eject": "react-scripts eject",
    "// Server-specific scripts": "",
    "server:dev": "nodemon server.js",
    "server:start": "node server.js"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "nodemon": "^2.0.2",
    "prettier": "1.19.1"
  },
  "prettier": {
    "singleQuote": true
  },
  "proxy": "http://localhost:3001"
}
