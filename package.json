{
  "name": "grand-central",
  "version": "1.0.0",
  "engines": {
    "node": ">=12.13.1"
  },
  "private": true,
  "dependencies": {
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "concurrently": "^5.3.0",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "http-status-codes": "^1.4.0",
    "mariadb": "^2.5.3",
    "markdown-styles": "^3.2.0",
    "mongodb": "^3.6.6",
    "node-schedule": "^2.0.0",
    "nodemailer": "^6.6.0",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "serve-index": "^1.9.1",
    "shortid": "^2.2.16"
  },
  "scripts": {
    "// Runs client and server in dev mode": "",
    "dev": "concurrently \"npm:client:dev\" \"npm:server:dev\" \"npm:build:blog\"",
    "// Runs client and server in prod mode": "",
    "start": "concurrently \"npm:client:build\" \"npm:server:start\" \"npm:build:blog\"",
    "// Client-specific scripts": "",
    "client:dev": "react-scripts start",
    "client:test": "react-scripts test",
    "client:build": "react-scripts build",
    "client:eject": "react-scripts eject",
    "// Server-specific scripts": "",
    "server:dev": "nodemon server.js",
    "server:start": "node server.js",
    "// Convert Markdown blog posts to HTML": "",
    "build:blog": "generate-md --layout mixu-page --input ./blog-src --output ./blog"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "nodemon": "^2.0.7",
    "prettier": "1.19.1"
  },
  "prettier": {
    "singleQuote": true
  },
  "proxy": "http://localhost:3001"
}
